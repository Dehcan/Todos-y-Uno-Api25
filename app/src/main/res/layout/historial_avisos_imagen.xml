<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/historialavisosimg"
    android:background="@color/fondoapp">
    <include layout="@layout/appbar3">

    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tit_hist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="Historial de avisos"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="35dp"
            android:layout_gravity="center"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fecha_hist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tit_hist"
                android:textStyle="bold"
                android:text="99/99/9999"
                android:textColor="@color/white"
                android:layout_marginLeft="60dp"
                android:textSize="18dp"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/txt_hist1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginHorizontal="170dp"
                android:layout_marginTop="-20dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/texto_historial_imagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus porta lorem nec ante maximus ultrices. In at aliquet leo, sit amet consectetur tellus. Curabitur ut posuere ipsum. Morbi vitae ligula fermentum, dictum lorem sed, dignissim risus. Fusce ornare non dui eget suscipit. Maecenas et erat sed quam ullamcorper imperdiet vel id quam. Aliquam erat volutpat. Pellentesque nunc nunc, suscipit non justo in, rutrum pulvinar lacus."
                android:textColor="@color/white"
                android:textStyle="bold"/>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/imagen"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:backgroundTint="@color/fondo"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>