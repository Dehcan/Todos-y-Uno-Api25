<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuadm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menuadm"
    android:orientation="vertical"
    android:background="@color/fondoapp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="horizontal">

        <include layout="@layout/appbar">


        </include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/gestiondeusuario"
            android:text="Gestion de usuarios"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/gestiondeaviso"
            android:text="Gestion de avisos"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/switchadm"
            android:text="Switch a modo usuario"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</LinearLayout>